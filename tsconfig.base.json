{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@sistema-titulacion/source"],
    "baseUrl": ".",
    "paths": {
      "@features/*": ["libs/frontend/features/src/*"],
      "@entities/*": ["libs/frontend/entities/src/*"],
      "@pages/*": ["libs/frontend/pages/src/*"],
      "@shared/*": ["libs/frontend/shared/src/*"],
      "@widgets/*": ["libs/frontend/widgets/src/*"]
    }
  }
}
